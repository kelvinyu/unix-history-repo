#	TTYINIT(2)
#
#	Initialize terminal attributes
#
#	Stephen B. Wampler
#
#	Last modified 8/14/84
#

global TANDEM, CBREAK, LCASE, ECHO, CRMOD, RAW          # tty commands
global ODDP, EVENP

#  initialize globals for tty control
#
procedure ttyinit()
   TANDEM       := 8r1
   CBREAK       := 8r2
   LCASE        := 8r4
   ECHO         := 8r10
   CRMOD        := 8r20
   RAW          := 8r40
   ODDP         := 8r100
   EVENP        := 8r200
end

