#	SHUFFILE(1)
#
#	Shuffle file
#
#	Ralph E. Griswold
#
#	Last modified 5/13/83
#

procedure main(x)
   local a
   a := []
   if x[1] == "-s" then &random := integer(x[2]) |
      stop("usage:  shuffile [-s n]")
   every put(a,!&input)
   shuffle(a)
   every write(!a)
end

procedure shuffle(x)
   every !x :=: ?x
end
