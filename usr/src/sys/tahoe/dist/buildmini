#	@(#)buildmini	1.1 (Berkeley) %G%
#
miniroot=dk4a
#
date
umount /dev/${miniroot}
newfs -s 4096 ${miniroot}
fsck /dev/r${miniroot}
mount /dev/${miniroot} /mnt
cd /mnt; sh /sys/tahoedist/get
cd /sys/tahoedist; sync
umount /dev/${miniroot}
fsck /dev/${miniroot}
date
