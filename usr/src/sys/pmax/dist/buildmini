# All rights reserved.
#
# %sccs.include.redist.sh%
#
#	@(#)buildmini	7.1 (Berkeley) %G%
#

dist=/bsd3/src/sys.newvm/pmax/dist
miniroot=rz0b
minimnt=/tmp/mini

date
mkdir ${minimnt}
umount /dev/${miniroot}
newfs -s 4096 ${miniroot}
fsck -P /dev/r${miniroot}
mount /dev/${miniroot} ${minimnt}
cd ${minimnt}; sh ${dist}/get
cd ${dist}; sync
umount /dev/${miniroot}
fsck /dev/r${miniroot}
date
