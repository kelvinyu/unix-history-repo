# Makefile %G%
ALL=	tftp tftpd
CFLAGS=-O

all: ${ALL}

.c.o:
	${CC} -S ${CFLAGS} $*.c
	sed -f ../asm.sed $*.s | as -o $*.o
	rm -f $*.s

tftp:	main.o tftp.o
	${CC} main.o tftp.o -o tftp -ljobs

tftpd:	tftpd.o
	${CC} tftpd.o -o tftpd -ljobs

clean:
	rm -f ${ALL} *.o *.s errs core a.out t.?

install: tftp tftpd
	install -s tftp /usr/ucb
	install -s tftpd /etc
