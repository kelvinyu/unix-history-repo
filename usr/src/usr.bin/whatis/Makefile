CFLAGS=	-O
LIBC=	/lib/libc.a
VPATH=	../man
SRCS=	whatis.c config.c
OBJS=	whatis.o config.o
MAN=	whatis.0

all: whatis

whatis: ${LIBC} ${OBJS}
	${CC} -o $@ ${CFLAGS} ${OBJS}

clean:
	rm -f core whatis ${OBJS}

cleandir: clean
	rm -f ${MAN} tags .depend

depend:
	mkdep ${CFLAGS} ${SRCS}

install: ${MAN}
	install -s -o bin -g bin -m 755 whatis ${DESTDIR}/usr/bin
	install -c -o bin -g bin -m 444 ${MAN} ${DESTDIR}/usr/man/cat1

lint:
	lint ${CFLAGS} ${SRCS}

tags:
	ctags ${SRCS}
